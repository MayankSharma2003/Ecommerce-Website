    <style>
        /* Reset some default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Basic styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #7da3de;
        }

        header {
            background-color: #3f5cdc;
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }

        header h1 {
            margin: 0;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            background-color: #f4e087;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: row;
            gap: 20px;
        }

        .user-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .user-info #logout {
            color: #ff5555;
            text-decoration: none;
        }



        .singleproduct {
            display: none;
        }

        .product-card {
            flex: 1 1 calc(33.33% - 20px);
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }

        /* Style the "Load More" button */
        #load-more {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #load-more:hover {
            background-color: #000000;
        }

        img {
            width: 100%;
            height: 60%;
        }

        button {
            display: inline-flex;
            padding: 10px 20px;
            /* Adjust the padding as needed */
            background-color: #007bff;
            /* Button background color */
            color: #fff;
            /* Text color */
            border: none;
            border-radius: 5px;
            /* Rounded corners, adjust as needed */
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            /* Font size */
            cursor: pointer;
            width: 45%;
            height: 30%;
            transition: background-color 0.3s ease;
            /* Smooth hover effect */
        }

        /* Hover effect */
        button:hover {
            background-color: #0056b3;
            /* Change the background color on hover */
        }

        .buttondiv {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

